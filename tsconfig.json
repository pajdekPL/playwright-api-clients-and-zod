{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "baseUrl": ".",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "paths": {
      "@api/*": ["src/api/*"],
      "@schemas/*": ["src/api/schemas/*"],
      "@fixtures/*": ["src/fixtures/*"]
    }
  }
}
